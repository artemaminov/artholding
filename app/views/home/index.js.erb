$(".project-modal").attr("id", <%= @project.id %>).html("<%= j render 'shared/project_modal' %>");

if ($(".project-modal:hidden").length != 0) {
  var prev_tabs_div_height = $("#tabs").height();
}
$("#tabs").css("min-height", "870px");

$(".project-modal .icn-close").click(function(evn){
  evn.preventDefault();
  $(".project-modal").fadeTo(0.3, 0).hide();
//  $(".project-modal").hide();
  $(this).unbind("click");
  $("#tabs").css("min-height", prev_tabs_div_height);
});

$(".project-modal .fancybox").fancybox({
  fitToView: false,
  maxWidth: "100%"
});

$(".fancybox").on("mouseover", function(event) {
  event.preventDefault();
});
