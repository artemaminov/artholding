          <div class="table">
            <div class="row">
              <div class="cell">
                <div class="cf">
                  <span>
                    <img src="<%= client.logo.url %>" alt=""/>
                  </span>
                  <% unless client.site.blank? %>
                    <a href="http://<%= client.site %>" rel="nofollow" target="_blank">
                  <% else %>
                    <a>
                  <% end %>
                  <img src="<%= client.logo_grey.url %>" alt=""/>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</section>
